<% if@posts.any? %>
  <% @posts.each do |post| %>
    <%= image_tag post.image.url(:medium) %>
    <h2><%= post.title %></h2>
    <%= link_to "Edit", 
        edit_post_path(post) %>
    <%= link_to "Delete", 
        post_path(post),
        method: :delete %>
  <% end %>
<% else %>
  No posts yet
<% end %>

<%= link_to 'Add a post', new_post_path %>